    "paths": {
        "/buscar": {
            "get": {
                "tags": [
                    "Búsqueda"
                ],
                "summary": "Buscar monumentos",
                "description": "Busca monumentos según los criterios especificados",
                "parameters": [
                    {
                        "name": "nombre",
                        "in": "query",
                        "description": "Nombre del monumento",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "localidad",
                        "in": "query",
                        "description": "Localidad del monumento",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "provincia",
                        "in": "query",
                        "description": "Provincia del monumento",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "tipo_monumento",
                        "in": "query",
                        "description": "Tipo de monumento",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Búsqueda exitosa",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "nombre": {
                                        "type": "string"
                                    },
                                    "localidad": {
                                        "type": "string"
                                    },
                                    "provincia": {
                                        "type": "string"
                                    },
                                    "tipo_monumento": {
                                        "type": "string"
                                    },
                                    "latitud": {
                                        "type": "number"
                                    },
                                    "longitud": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Error en la búsqueda"
                    }
                }
            }
        }
    }
