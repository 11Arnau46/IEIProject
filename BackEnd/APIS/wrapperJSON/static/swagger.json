{
    "swagger": "2.0",
    "info": {
        "description": "API documentation for WrapperJSON",
        "version": "1.0.0",
        "title": "WrapperJSON API",
        "contact": {
            "email": "agarmar6@etsfinf.upv.es"
        }
    },
    "host": "localhost:8082",
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "tags": [
        {
            "name": "WrapperJSON",
            "description": "Endpoints para la transformación de datos JSON"
        }
    ],
    "paths": {
        "/wrapperJSON/execute": {
            "post": {
                "tags": [
                    "WrapperJSON"
                ],
                "summary": "Ejecutar transformación de datos JSON",
                "description": "Ejecuta el proceso de transformación de datos JSON y devuelve el contenido del archivo JSONtoJSON.json generado",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Transformación exitosa",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        }
                    },
                    "404": {
                        "description": "Archivo de salida no encontrado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            },
            "delete": {
                "tags": [
                    "WrapperJSON"
                ],
                "summary": "Eliminar archivo de salida JSON",
                "description": "Elimina el archivo JSONtoJSON.json generado por la transformación",
                "responses": {
                    "200": {
                        "description": "Archivo eliminado exitosamente"
                    },
                    "404": {
                        "description": "Archivo no encontrado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            }
        }
    }
}