{
    "swagger": "2.0",
    "info": {
        "description": "API para la transformación de datos de XML a JSON",
        "version": "1.0.0",
        "title": "WrapperXML API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "you@example.com"
        }
    },
    "host": "localhost:8081",
    "basePath": "/",
    "tags": [
        {
            "name": "WrapperXML",
            "description": "Endpoints para la transformación de datos de XML a JSON"
        }
    ],
    "paths": {
        "/wrapperXML/execute": {
            "post": {
                "tags": [
                    "WrapperXML"
                ],
                "summary": "Ejecutar transformación de XML a JSON",
                "description": "Transforma la fuente de datos XML al formato JSON.",
                "responses": {
                    "200": {
                        "description": "Transformación exitosa"
                    },
                    "400": {
                        "description": "Solicitud inválida",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Parámetros inválidos."
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error interno del servidor",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Error interno del servidor. Intente más tarde."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/wrapperXML/result": {
            "get": {
                "tags": [
                    "WrapperXML"
                ],
                "summary": "Obtener resultado en JSON",
                "description": "Obtiene el valor transformado final en formato JSON.",
                "responses": {
                    "200": {
                        "description": "Resultado obtenido exitosamente",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "404": {
                        "description": "Resultado no encontrado",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Resultado no encontrado."
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error interno del servidor",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Error interno del servidor. Intente más tarde."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/wrapperXML/log": {
            "get": {
                "tags": [
                    "WrapperXML"
                ],
                "summary": "Obtener log de resultados",
                "description": "Obtiene el log de resultados de la transformación.",
                "responses": {
                    "200": {
                        "description": "Log obtenido exitosamente",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Log no encontrado",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Log no encontrado."
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error interno del servidor",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Error interno del servidor. Intente más tarde."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/wrapperXML/result": {
            "delete": {
                "tags": [
                    "WrapperXML"
                ],
                "summary": "Eliminar resultado en JSON",
                "description": "Elimina el resultado obtenido en formato JSON.",
                "responses": {
                    "200": {
                        "description": "Resultado eliminado exitosamente"
                    },
                    "404": {
                        "description": "Resultado no encontrado",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Resultado no encontrado."
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error interno del servidor",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Error interno del servidor. Intente más tarde."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/wrapperXML/log": {
            "delete": {
                "tags": [
                    "WrapperXML"
                ],
                "summary": "Vaciar archivo de log",
                "description": "Vacía el archivo de log de resultados.",
                "responses": {
                    "200": {
                        "description": "Log vaciado exitosamente"
                    },
                    "404": {
                        "description": "Log no encontrado",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Log no encontrado."
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error interno del servidor",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Error interno del servidor. Intente más tarde."
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}