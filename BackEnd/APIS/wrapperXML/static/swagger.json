{
    "swagger": "2.0",
    "info": {
        "description": "API para la transformación de datos de XML",
        "version": "1.0.0",
        "title": "WrapperXML API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "agarmar6@etsinf.upv.es"
        }
    },
    "host": "localhost:8081",
    "basePath": "/",
    "tags": [
        {
            "name": "WrapperXML",
            "description": "Endpoints para la transformación de datos de XML"
        },
        {
            "name": "WrapperXML Logs",
            "description": "Endpoints para la gestión de logs"
        }
    ],
    "paths": {
        "/wrapperXML/execute": {
            "post": {
                "tags": [
                    "WrapperXML"
                ],
                "summary": "Ejecutar transformación de datos a XML",
                "description": "Endpoint para ejecutar la transformación de datos a XML.",
                "responses": {
                    "201": {
                        "description": "Transformación de datos exitosa"
                    },
                    "404": {
                        "description": "Archivo de salida no encontrado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            },
            "delete": {
                "tags": [
                    "WrapperXML"
                ],
                "summary": "Eliminar archivo XML generado",
                "description": "Endpoint para eliminar el archivo XML generado por la transformación.",
                "responses": {
                    "200": {
                        "description": "Archivo eliminado exitosamente"
                    },
                    "404": {
                        "description": "Archivo no encontrado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            }
        },
        "/wrapperXML/log/estadisticas": {
            "get": {
                "tags": [
                    "WrapperXML Logs"
                ],
                "summary": "Obtener log de estadísticas",
                "description": "Endpoint para obtener el contenido del archivo de log de estadísticas.",
                "responses": {
                    "200": {
                        "description": "Contenido del log obtenido exitosamente"
                    },
                    "404": {
                        "description": "Log de estadísticas no encontrado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            },
            "delete": {
                "tags": [
                    "WrapperXML Logs"
                ],
                "summary": "Limpiar log de estadísticas",
                "description": "Endpoint para limpiar el contenido del archivo de log de estadísticas.",
                "responses": {
                    "200": {
                        "description": "Log de estadísticas limpiado exitosamente"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            }
        },
        "/wrapperXML/log/rechazados": {
            "get": {
                "tags": [
                    "WrapperXML Logs"
                ],
                "summary": "Obtener log de rechazados",
                "description": "Endpoint para obtener el contenido del archivo de log de entradas rechazadas.",
                "responses": {
                    "200": {
                        "description": "Contenido del log obtenido exitosamente"
                    },
                    "404": {
                        "description": "Log de rechazados no encontrado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            },
            "delete": {
                "tags": [
                    "WrapperXML Logs"
                ],
                "summary": "Limpiar log de rechazados",
                "description": "Endpoint para limpiar el contenido del archivo de log de entradas rechazadas.",
                "responses": {
                    "200": {
                        "description": "Log de rechazados limpiado exitosamente"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            }
        },
        "/wrapperXML/log/reparados": {
            "get": {
                "tags": [
                    "WrapperXML Logs"
                ],
                "summary": "Obtener log de reparados",
                "description": "Endpoint para obtener el contenido del archivo de log de entradas reparadas.",
                "responses": {
                    "200": {
                        "description": "Contenido del log obtenido exitosamente"
                    },
                    "404": {
                        "description": "Log de reparados no encontrado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            },
            "delete": {
                "tags": [
                    "WrapperXML Logs"
                ],
                "summary": "Limpiar log de reparados",
                "description": "Endpoint para limpiar el contenido del archivo de log de entradas reparadas.",
                "responses": {
                    "200": {
                        "description": "Log de reparados limpiado exitosamente"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            }
        },
        "/wrapperXML/log": {
            "delete": {
                "tags": [
                    "WrapperXML Logs"
                ],
                "summary": "Limpiar todos los logs",
                "description": "Endpoint para limpiar el contenido de todos los archivos de log.",
                "responses": {
                    "200": {
                        "description": "Todos los archivos de log han sido limpiados exitosamente"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            }
        }
    }
}